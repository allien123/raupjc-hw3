@model zadatak2.ViewModels.AddTodoViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add item</title>
    <link rel="stylesheet" href="~/css/TodoStyle.css" />
</head>
<body>
<div>
    <form asp-action="Add" method="post">
        Text: <input asp-for="Text"/> <span asp-validation-for="Text"></span> <br/>
        Date due: <input asp-for="DateDue"/>  <br/>
        Labels: <input asp-for="labels"/> (separate labels using ';') <br/>
        <input type="submit"/>
    </form>
    <a asp-controller="Todo" asp-action="Index">Back to active todos</a>
</div>
</body>
</html>
